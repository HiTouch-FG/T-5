<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <chase-distance-m type="double" archive="y"> -20 </chase-distance-m>

  <view n="100">
    <name>Passanger Seat View</name>
    <internal archive="y">true</internal>
    <type>lookfrom</type>
    <config>
      <from-model type="bool">true</from-model>
      <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
       <x-offset-m archive="y">  0.300 </x-offset-m>	<!-- Right -->
       <y-offset-m archive="y">  0.85 </y-offset-m>	<!-- Up    -->
       <z-offset-m archive="y"> -1.55 </z-offset-m>	<!-- Back  -->
      <pitch-offset-deg> -7 </pitch-offset-deg>
      <default-field-of-view-deg> 76 </default-field-of-view-deg>
      <dynamic-view type="bool">true</dynamic-view>
    </config>
  </view>

  <view n="101">
    <name>Rr Seat View</name>
    <internal archive="y">true</internal>
    <type>lookfrom</type>
    <config>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <ground-level-nearplane-m type="double">0.01f</ground-level-nearplane-m>
      <x-offset-m archive="y"> -0.160 </x-offset-m> <!--Right-->
      <y-offset-m archive="y">  0.860 </y-offset-m> <!--Up-->
      <z-offset-m archive="y"> -0.720 </z-offset-m> <!--Back-->
      <pitch-offset-deg> 0 </pitch-offset-deg>
      <default-field-of-view-deg type="double"> 76 </default-field-of-view-deg>
    </config>
  </view>

  <view n="0">
    <internal archive="y">true</internal>
    <config>
       <x-offset-m archive="y"> -0.300 </x-offset-m>	<!-- Right -->
       <y-offset-m archive="y">  0.82 </y-offset-m>	<!-- Up    -->
       <z-offset-m archive="y"> -1.55 </z-offset-m>	<!-- Back  -->
       <pitch-offset-deg> -5 </pitch-offset-deg>
      <default-field-of-view-deg> 76 </default-field-of-view-deg>
    </config>
  </view>

</PropertyList>

